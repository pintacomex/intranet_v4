<table cellpadding="0" cellspacing="0" border="0" class="table table-hover table-bordered table-striped" id="">
  <thead>
    <tr>
      <th><a href="#" data-toggle="tooltip" title="Año">Año</a></th>
      <th><a href="#" data-toggle="tooltip" title="Número de Ventas">Ventas</a></th>
      <th><a href="#" data-toggle="tooltip" title="Importe de Ventas">$ Ventas</a></th>
      <th><a href="#" data-toggle="tooltip" title="Porcentaje de Descuento Real">%Desc</a></th>
      <th><a href="#" data-toggle="tooltip" title="Número de Pagos">Pagos</a></th>
      <th><a href="#" data-toggle="tooltip" title="Importe de Pagos">$ Pagos</a></th>
      <th><a href="#" data-toggle="tooltip" title="Saldo Promedio">SaldoProm</a></th>
      <th><a href="#" data-toggle="tooltip" title="Saldo Máximo">SaldoMax</a></th>
      <th><a href="#" data-toggle="tooltip" title="Plazo Promedio">PlazoProm</a></th>
    </tr>
  </thead>
  <tbody>
    <% @historial_cliente.each do |m| %>
      <tr>
        <td><button type="button" class="btn btn-link btn-xs historial_c_a" data-sucursal=<%= @antsaldos[0]['Sucursal'] %> data-idcliente=<%= @antsaldos[0]['Idcliente'] %> data-year=<%= m['Año'] %> data-nomcliente='<%= @antsaldos[0]['NombreCli'] %>'><%= m['Año'] %></button></td>
        <td><%= m['Num_Ventas'].to_i %></td>
        <td><%= m['Imp_Ventas'].to_i > 0 ? number_to_currency(m['Imp_Ventas'], :locale => :mx, :precision => 2) : "" %></td>
        <td><%= m['Porc_Desc_Real'].to_i > 0 ? "#{number_to_currency(m['Porc_Desc_Real'], :locale => :mx, :precision => 2).gsub("$","")}%" : "" %></td>
        <td><%= m['Num_Pagos'].to_i %></td>
        <td><%= m['Imp_Pagos'].to_i > 0 ? number_to_currency(m['Imp_Pagos'], :locale => :mx, :precision => 2) : "" %></td>
        <td><%= m['Saldo_Promedio'].to_i > 0 ? number_to_currency(m['Saldo_Promedio'], :locale => :mx, :precision => 2) : "" %></td>
        <td><%= m['Saldo_Maximo'].to_i > 0 ? number_to_currency(m['Saldo_Maximo'], :locale => :mx, :precision => 2) : "" %></td>
        <td><%= m['Plazo_Promedio'].to_i %></td>
      </tr>
    <% end %>
    <% if @historial_cliente.count < 1 %>
      <tr>
        <td colspan="9">Sin datos</td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function() {
    $('.historial_c_a').click(function(e) {
      handleHistorialCAClick(e.target);
    });
  });
</script>