<%= render(partial: '/auths/navpills') %>

<div class="col-md-12 col-sm-12 center-block inner-top-sm">

	<br>

	<table cellpadding="0" cellspacing="0" border="0" class=" text-center table table-hover table-bordered table-striped">

	  <thead>
      <tr>
				<th><a href="#" data-toggle="tooltip" title="Fecha de CreaciÃ³n de la Solicitud">Fecha</a></th>
	      <th><a href="#" data-toggle="tooltip" title="Tipo de la Solicitud">Tipo</a></th>
	      <th><a href="#" data-toggle="tooltip" title="Mensaje de la Solicitud">Mensaje</a></th>
	      <th><a href="#" data-toggle="tooltip" title="Persona que Solicita">Solicita</a></th>
	      <th><a href="#" data-toggle="tooltip" title="Persona que Autoriza">Autoriza</a></th>
	      <th><a href="#" data-toggle="tooltip" title="Nivel Actual">Nivel</a></th>
        <th></th>
	    </tr>
	  </thead>

    <tbody>
      <% @solicitudes.each do |item| %>
        <% url = "/auths/solicitudes/#{item['IdSolicitud']}" %>
        <tr>
	        <td><%= link_to item['FechaCreacion'].to_s[0..10], url, title: item['FechaCreacion'], data: { toggle: "tooltip" } %></td>
          <td><%= link_to get_tipo_solicitud(item['IdTipoSolicitud']), url, title: get_tipo_solicitud(item['IdTipoSolicitud']), data: { toggle: "tooltip" } %></td>
	        <td><%= link_to item['Texto'].to_s.truncate(30), url, title: item['Texto'], data: { toggle: "tooltip" } %></td>
	        <td><%= get_usuario(item['IdUsuarioSolicitante'], "Ninguno") %></td>
	        <td><%= get_usuario(item['IdUsuarioAutorizador'], "Ninguno") %></td>
          <td><%= get_nivel(item['NivelActual']) %></td>
          <td>
            <%= link_to 'Ver', url, class: 'btn btn-xs btn-primary' %>
          </td>
        </tr>
      <% end %>
	  </tbody>
	</table>

  <%= link_to 'Crear Solicitud', new_auths_solicitude_path, class: "btn btn-primary" %>

</div>
