<br>
<%= render(partial: '/auths/navpills') %>

<div class="col-md-12 col-sm-12 center-block inner-top-sm">

	<br>

	<table cellpadding="0" cellspacing="0" border="0" class=" text-center table table-hover table-bordered table-striped">

	  <thead>
      <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th></th>
	    </tr>
	  </thead>

    <tbody>
      <% @solicitudes.each do |item| %>
        <% url = "/auths/tipo_solicitudes/#{item['IdTipoSolicitud']}" %>
        <tr>
          <td><%= link_to item['IdTipoSolicitud'], url, title: item['IdTipoSolicitud'], data: { toggle: "tooltip" } %></td>
          <td><%= link_to item['Nombre'], url, title: item['Nombre'], data: { toggle: "tooltip" } %></td>
          <td>
            <%= link_to 'Ver', url, class: 'btn btn-xs btn-primary' %>
            <%= link_to 'Editar', "#{url}/edit", class: 'btn btn-xs btn-default' %>
            <%= link_to 'Borrar', url, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Esta seguro?' } %>
          </td>
        </tr>
      <% end %>
	  </tbody>
	</table>

  <%= link_to 'Crear Tipo de Solicitud', new_auths_tipo_solicitude_path, class: "btn btn-primary" %>

</div>
