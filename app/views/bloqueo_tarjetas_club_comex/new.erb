<h1 class="text-center">Agregar Tarjeta a la Lista</h1>

<div class="col-md-12 col-sm-12 center-block inner-top-sm">

  <small>
    <%= link_to "Regresar", "/bloqueo_tarjetas_club_comex" %>
  </small>
  <br />
  <br />

	<div class="container well">
		<div class="card">
      <%= form_tag('/bloqueo_tarjetas_club_comex_create', class: 'form-horizontal' )  do |f| %>
        <div class="form-inputs loader-form ">
          <br>
          <div class="form-group">
            <label class="control-label col-md-12">Tarjeta</label>
            <div class="col-md-6 text-right">
              <%= text_field_tag 'id', "", label: false, placeholder: "123456", class: 'form-control' %>
              <p class="help-block">Ingrese la Tarjeta</p>
            </div>
          </div>
          <br>
        </div>
        <div class="form-actions loader-form text-center">
          <%= submit_tag "Enviar", class: "btn btn-primary btn-lg" %>
        </div>
        <br><br>
      <% end %>
    </div>
  </div>
</div>

<script src="/js/jquery.dataTables.min.js"></script>
<script src="/js/dataTables.bootstrap4.min.js"></script>


<style type="text/css">
label{
  display: none;
}
.dataTables_filter.md-form {
    margin-top: .55rem;
}
.dataTables_filter.md-form input{
    font-weight: 300;
}
.dataTables_wrapper .row {
    margin-bottom: 1.5rem;
}
div.dataTables_wrapper div.dataTables_info {
    padding-top: 0;
    padding-bottom: 1rem;
}
.dataTables_paginate {
    float: right;
}
.dataTables_filter {
    float: right;
}
</style>

<script type="text/javascript">
$(document).ready(function() {
  $('#example').DataTable({"pageLength": 100 });
  $('.dataTables_wrapper').find('label').each(function() {
    $(this).parent().append($(this).children());
  });
  $('.dataTables_filter').find('input').each(function() {
    $('input').attr("placeholder", "Buscar");
    $('input').removeClass('form-control-sm');
  });
  $('.dataTables_length').addClass('d-flex flex-row');
  $('.dataTables_filter').addClass('md-form');
  $('select').addClass('mdb-select');
  $('.mdb-select').removeClass('form-control form-control-sm');
  $('.dataTables_filter').find('label').remove();
});
</script>
