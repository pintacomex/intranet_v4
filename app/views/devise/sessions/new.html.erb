<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Ingresar a mi cuenta</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if false #devise_mapping.registerable? %>
        <%= link_to 'Registrar / Register', new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label "Usuario" %>
      <%= f.text_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label "Contraseña" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>


    <% if devise_mapping.rememberable? -%>
      <div class="col-md-9">
        <div class="form-group ">
          <div class="checkbox">
            <%= f.check_box :remember_me %> <%= f.label :remember_me, "Recordarme" %>
          </div>
        </div>
      </div>
    <% end -%>

    <div class="pull-right">
      <%= f.submit 'Ingresar', class: 'button' %>
    </div>


    <%- if devise_mapping.recoverable? %>
      <div class="col-md-9">
      <div class="form-group">
        <div class="pull-left">
          <%= link_to "¿Olvidó su contraseña? ", new_password_path(resource_name), class: 'right' %>
        </div>
      </div>
      </div>
    <% end -%>
    
  <% end %>
</div>

