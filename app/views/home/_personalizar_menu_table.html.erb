<table cellpadding="0" cellspacing="0" border="0" class="table table-hover table-bordered table-striped" id="example">
  <thead>
    <tr>
      <th><a href="#" data-toggle="tooltip" title="Nombre del Bloque">Bloque</a></th>
      <th><a href="#" data-toggle="tooltip" title="Nombre del Módulo">Módulo</a></th>
      <th><a href="#" data-toggle="tooltip" title="Esconder el Módulo del Menú">Esconder</a></th>
    </tr>
  </thead>

  <tbody>
  <% @modulos.each do |m| %>
    <tr>
      <td><%= m[:bloque] %></td>
      <td><%= m[:nombre] %></td>
      <td><a href="#" class="btn btn-xs btn-modulo <%= m[:escondido] == 0 ? "btn-success" : "btn-info" %>" data-modulo="<%= m[:url] %>" data-escondido="<%= m[:escondido] %>"><%= m[:escondido] == 0 ? "Esconder" : raw("&nbsp;Mostrar&nbsp;") %></a></td>
    </tr>
  <% end %>
  </tbody>
</table>
<script>
  $(document).ready(function() {
    $('.btn-modulo').click(function(e) {
      var url = "/personalizar_menu_t.js?modulo=" + $(e.target).data('modulo') + "&escondido=" + $(e.target).data('escondido');
      $.getScript( url );
    });
  });
</script>