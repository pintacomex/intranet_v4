<br>
<%= render(partial: '/tableros/navpills') %>

<div class="col-md-12 col-sm-12 center-block inner-top-sm">

	<br>

	<table cellpadding="0" cellspacing="0" border="0" class=" text-center table table-hover table-bordered table-striped">

	  <thead>
      <tr>
        <th>Layout</th>
        <th>Elemento</th>
        <th>Nombre del Elemento</th>
        <th>Titulo Adicional</th>
        <th></th>
	    </tr>
	  </thead>
   
    <tbody>
      <% @layouts.each do |item| %>
        <% url = "/tableros/layouts/#{item['IdLayout']}-#{item['IdElemento']}" %>
        <tr>
          <td><%= link_to item['IdLayout'], url, title: item['IdLayout'], data: { toggle: "tooltip" } %></td>
          <td><%= link_to item['IdElemento'], url, title: item['IdElemento'], data: { toggle: "tooltip" } %></td>
          <td><%= link_to item['NombreElemento'].to_s.truncate(15), url, title: item['NombreElemento'], data: { toggle: "tooltip" } %></td>
          <td><%= link_to item['TituloAdicional'].to_s.truncate(15), url, title: item['TituloAdicional'], data: { toggle: "tooltip" } %></td>
          <td>
            <%= link_to 'Ver', url, class: 'btn btn-xs btn-primary' %>
            <%= link_to 'Editar', "#{url}/edit", class: 'btn btn-xs btn-default' %>
            <%= link_to 'Borrar', url, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Esta seguro?' } %>
          </td>
        </tr>
      <% end %>    
	  </tbody>
	</table>

  <%= link_to 'Crear Layout', new_tableros_layout_path, class: "btn btn-primary" %>

</div>
