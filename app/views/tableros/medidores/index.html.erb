
<br>
<%= render(partial: '/tableros/navpills') %>

<div class="col-md-12 col-sm-12 center-block inner-top-sm">

	<br>

	<table cellpadding="0" cellspacing="0" border="0" class=" text-center table table-hover table-bordered table-striped">

	  <thead>
      <tr>
        <th>IdMedidor</th>
        <th>Titulo</th>
        <th>Comentario</th>
        <th>Tipo</th>
        <th></th>
	    </tr>
	  </thead>

    <tbody>
      <% @medidores.each do |medidor| %>
        <% url = "/tableros/medidores/#{medidor['IdMedidor']}" %>
        <tr>
          <td><%= link_to medidor['IdMedidor'], url, title: medidor['IdMedidor'], data: { toggle: "tooltip" } %></td>
          <td><%= link_to medidor['Titulo'].truncate(40), url, title: medidor['Titulo'], data: { toggle: "tooltip" } %></td>
          <td><%= link_to medidor['Comentario'].truncate(40), url, title: medidor['Comentario'], data: { toggle: "tooltip" } %></td>
          <td><%= link_to get_tipo_medidor(medidor['TipoMedidor']), url %></td>
          <td>
            <%= link_to 'Ver', url, class: 'btn btn-xs btn-primary' %>
            <%= link_to 'Editar', "#{url}/edit", class: 'btn btn-xs btn-default' %>
            <%= link_to 'Borrar', url, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Esta seguro?' } %>
          </td>
        </tr>
      <% end %>
	  </tbody>
	</table>

  <%= link_to 'Crear Medidor', new_tableros_medidore_path, class: "btn btn-primary" %>

</div>
