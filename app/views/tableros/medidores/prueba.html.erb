
<% charts = ['pie', 'column', 'line', 'bar', 'area', 'spline', 'splineArea', 'stepLine', 'scatter', 'bubble', 'stackedColumn', 'stackedBar', 'stackedArea', 'doughnut'] %>

<% charts.each do |chart| %>
	<h3>canvasjs <%= chart %></h3>
	<div id="chartContainer<%= chart %>" style="height: 300px; width: 100%;"></div>
<% end %>

<script>
window.onload = function() {

	<% charts.each do |chart| %>

	var chart<%= chart %> = new CanvasJS.Chart("chartContainer<%= chart %>", {
		animationEnabled: true,
		title: {
			text: "Desktop Search Engine Market Share - 2016"
		},
		data: [{
			type: "<%= chart %>",
			startAngle: 240,
			yValueFormatString: "##0.00\"%\"",
			indexLabel: "{label} {y}",
			dataPoints: [
				{y: 79.45, label: "Google"},
				{y: 7.31, label: "Bing"},
				{y: 7.06, label: "Baidu"},
				{y: 4.91, label: "Yahoo"},
				{y: 1.26, label: "Others"}
			]
		}]
	});
	chart<%= chart %>.render();
<% end %>

}
</script>
